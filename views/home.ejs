<%- include("partials/header"); -%>   
<h1>Home</h1>
 <p><%=startingContent%></p>   


 <%posts.forEach(function(post){%>     
     <h1><%= post.title %></h1>           
      <p>
        <%=post.content.slice(0,100) +"..."%>  <!-- 29 we want to shorten or truncate the string into 100 characters with a ... in the end so we use slice, we can also use substring--> -->
        <a href="/posts/<%=post.title%>">read more</a>   
      </p>                                                
 <%});%>
 <%- include('partials/footer'); -%>